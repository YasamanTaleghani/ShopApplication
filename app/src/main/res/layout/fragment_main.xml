<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.MainFragment"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جدیدترین محصولات"
            android:layout_gravity="end"
            android:textSize="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/orangePrimaryDark">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orangePrimaryDark"
            android:layout_marginTop="8dp"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="8dp">
        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNewestItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بالاترین امتیاز"
            android:layout_gravity="end"
            android:textSize="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/orangePrimaryDark">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orangePrimaryDark"
            android:layout_marginTop="8dp"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="8dp">
        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHighestRanked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</ScrollView>
