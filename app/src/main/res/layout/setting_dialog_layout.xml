<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اعلان"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="50dp"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:textSize="26dp"/>

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_marginRight="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اعلان 3 ساعته"
        app:layout_constraintTop_toBottomOf="@id/switch2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="32dp"/>

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_marginRight="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اعلان 4 ساعته"
        app:layout_constraintTop_toBottomOf="@id/radioButton3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="32dp"/>

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_marginRight="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اعلان 5 ساعته"
        app:layout_constraintTop_toBottomOf="@id/radioButton4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="32dp"/>

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_marginRight="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اعلان 8 ساعته"
        app:layout_constraintTop_toBottomOf="@id/radioButton5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="32dp"/>

    <RadioButton
        android:id="@+id/radioButton7"
        android:layout_marginRight="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اعلان 12 ساعته"
        app:layout_constraintTop_toBottomOf="@id/radioButton6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"/>

    <RadioButton
        android:id="@+id/radioButton8"
        android:layout_marginRight="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="زمان دلخواه"
        app:layout_constraintTop_toBottomOf="@id/radioButton7"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="number"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="@+id/radioButton8"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_cancle"
        android:text="انصراف"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp">
    </Button>

    <Button
        android:id="@+id/btn_ok"
        android:text="ثبت"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:layout_constraintStart_toEndOf="@+id/btn_cancle"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp">
    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>